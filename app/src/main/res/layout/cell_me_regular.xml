<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:paddingBottom="8dp"
                                             android:background="#FFFFFF">

    <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp" app:srcCompat="@mipmap/guest"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/me_regular_cell_image"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/me_regular_cell_text" app:layout_constraintStart_toEndOf="@+id/me_regular_cell_image"
            android:layout_marginLeft="12dp" android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@+id/me_regular_cell_image"
            app:layout_constraintBottom_toBottomOf="@+id/me_regular_cell_image"/>
</android.support.constraint.ConstraintLayout>